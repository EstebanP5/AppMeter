<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:padding="8dp"
    android:background="#F5F5F5">

    <!-- ✅ NUEVA FILA DE BOTONES DE CONFIGURACIÓN -->
    <LinearLayout
        android:id="@+id/configButtonsContainer"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:background="@drawable/rounded_container"
        android:padding="12dp"
        app:layout_constraintTop_toTopOf="parent">

        <Button
            android:id="@+id/btnDeviceId"
            android:layout_width="0dp"
            android:layout_height="48dp"
            android:layout_weight="1"
            android:text="Info METER"
            android:textSize="13sp"
            android:textStyle="bold"
            android:background="@drawable/button_play"
            android:textColor="#FFFFFF"
            android:layout_marginEnd="8dp"/>

        <Button
            android:id="@+id/btnConfigWifi"
            android:layout_width="0dp"
            android:layout_height="48dp"
            android:layout_weight="1"
            android:text="Vincular WiFi"
            android:textSize="13sp"
            android:textStyle="bold"
            android:background="@drawable/button_play"
            android:textColor="#FFFFFF"/>
    </LinearLayout>

    <LinearLayout
        android:id="@+id/controlsContainer"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:background="@drawable/rounded_container"
        android:padding="12dp"
        android:layout_marginTop="8dp"
        app:layout_constraintTop_toBottomOf="@id/configButtonsContainer">

        <LinearLayout
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:orientation="vertical"
            android:layout_marginEnd="8dp">
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Cableado"
                android:textStyle="bold"
                android:textSize="12sp"
                android:textColor="#666"/>
            <Spinner
                android:id="@+id/spinnerCableado"
                android:layout_width="match_parent"
                android:layout_height="40dp"
                android:background="@drawable/spinner_background"/>
        </LinearLayout>

        <LinearLayout
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:orientation="vertical"
            android:layout_marginStart="8dp">
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Amperes"
                android:textStyle="bold"
                android:textSize="12sp"
                android:textColor="#666"/>

            <Spinner
                android:id="@+id/spinnerAmperes"
                android:layout_width="match_parent"
                android:layout_height="40dp"
                android:background="@drawable/spinner_background" />
        </LinearLayout>
    </LinearLayout>

    <LinearLayout
        android:id="@+id/mainContainer"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:orientation="horizontal"
        android:layout_marginTop="8dp"
        app:layout_constraintTop_toBottomOf="@id/controlsContainer"
        app:layout_constraintBottom_toTopOf="@id/buttonContainer"
        android:weightSum="2">

        <LinearLayout
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:orientation="vertical"
            android:layout_marginEnd="4dp">

            <androidx.cardview.widget.CardView
                android:layout_width="match_parent"
                android:layout_height="0dp"
                android:layout_weight="1.2"
                app:cardCornerRadius="8dp"
                app:cardElevation="2dp"
                android:layout_marginBottom="4dp">

                <ImageView
                    android:id="@+id/imageDiagram"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:contentDescription="Diagrama eléctrico"
                    android:scaleType="fitCenter"
                    android:padding="8dp"
                    tools:src="@drawable/diagram_3p4w_n"/>

            </androidx.cardview.widget.CardView>

            <androidx.cardview.widget.CardView
                android:layout_width="match_parent"
                android:layout_height="0dp"
                android:layout_weight="0.8"
                app:cardCornerRadius="8dp"
                app:cardElevation="2dp">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:orientation="vertical"
                    android:padding="8dp">

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="horizontal"
                        android:layout_marginBottom="6dp">

                        <TextView
                            android:layout_width="0dp"
                            android:layout_height="wrap_content"
                            android:layout_weight="1"
                            android:text="L1"
                            android:textStyle="bold"
                            android:textSize="14sp"
                            android:textColor="#000000"
                            android:gravity="center"/>

                        <TextView
                            android:layout_width="0dp"
                            android:layout_height="wrap_content"
                            android:layout_weight="1"
                            android:text="L2"
                            android:textStyle="bold"
                            android:textSize="14sp"
                            android:textColor="#FF0000"
                            android:gravity="center"/>

                        <TextView
                            android:layout_width="0dp"
                            android:layout_height="wrap_content"
                            android:layout_weight="1"
                            android:text="L3"
                            android:textStyle="bold"
                            android:textSize="14sp"
                            android:textColor="#007BFF"
                            android:gravity="center"/>
                    </LinearLayout>

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="0dp"
                        android:layout_weight="1"
                        android:orientation="horizontal"
                        android:weightSum="3">

                        <LinearLayout
                            android:layout_width="0dp"
                            android:layout_height="match_parent"
                            android:layout_weight="1"
                            android:orientation="vertical"
                            android:background="#424242"
                            android:padding="6dp"
                            android:layout_marginEnd="2dp">

                            <TextView android:id="@+id/tvCH1"
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:text="① CH"
                                android:textColor="@android:color/white"
                                android:textStyle="bold"
                                android:textSize="10sp"
                                android:gravity="center"
                                android:layout_marginBottom="2dp"/>

                            <TextView android:id="@+id/tvV1"
                                android:layout_width="match_parent"
                                android:layout_height="0dp"
                                android:layout_weight="1"
                                android:text="0.0 V"
                                android:textColor="@android:color/white"
                                android:textStyle="bold"
                                android:background="#AA000000"
                                android:gravity="center"
                                android:textSize="10sp"
                                android:layout_marginBottom="1dp"/>

                            <TextView android:id="@+id/tvA1"
                                android:layout_width="match_parent"
                                android:layout_height="0dp"
                                android:layout_weight="1"
                                android:text="0.0 A"
                                android:textColor="@android:color/white"
                                android:textStyle="bold"
                                android:background="#AA000000"
                                android:gravity="center"
                                android:textSize="10sp"
                                android:layout_marginBottom="1dp"/>

                            <TextView android:id="@+id/tvW1"
                                android:layout_width="match_parent"
                                android:layout_height="0dp"
                                android:layout_weight="1"
                                android:text="0.0 W"
                                android:textColor="@android:color/white"
                                android:textStyle="bold"
                                android:background="#AA000000"
                                android:gravity="center"
                                android:textSize="10sp"
                                android:layout_marginBottom="1dp"/>

                            <TextView android:id="@+id/tvHz1"
                                android:layout_width="match_parent"
                                android:layout_height="0dp"
                                android:layout_weight="1"
                                android:text="0.0 Hz"
                                android:textColor="@android:color/white"
                                android:textStyle="bold"
                                android:background="#AA000000"
                                android:gravity="center"
                                android:textSize="10sp"
                                android:layout_marginBottom="1dp"/>

                            <TextView android:id="@+id/tvpF1"
                                android:layout_width="match_parent"
                                android:layout_height="0dp"
                                android:layout_weight="1"
                                android:text="0°"
                                android:textColor="@android:color/white"
                                android:textStyle="bold"
                                android:background="#AA000000"
                                android:gravity="center"
                                android:textSize="10sp"/>
                        </LinearLayout>

                        <LinearLayout
                            android:layout_width="0dp"
                            android:layout_height="match_parent"
                            android:layout_weight="1"
                            android:orientation="vertical"
                            android:background="#FF0000"
                            android:padding="6dp"
                            android:layout_marginHorizontal="1dp">

                            <TextView android:id="@+id/tvCH2"
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:text="② CH"
                                android:textColor="@android:color/white"
                                android:textStyle="bold"
                                android:textSize="10sp"
                                android:gravity="center"
                                android:layout_marginBottom="2dp"/>

                            <TextView android:id="@+id/tvV2"
                                android:layout_width="match_parent"
                                android:layout_height="0dp"
                                android:layout_weight="1"
                                android:text="0.0 V"
                                android:textColor="@android:color/white"
                                android:textStyle="bold"
                                android:background="#AA000000"
                                android:gravity="center"
                                android:textSize="10sp"
                                android:layout_marginBottom="1dp"/>

                            <TextView android:id="@+id/tvA2"
                                android:layout_width="match_parent"
                                android:layout_height="0dp"
                                android:layout_weight="1"
                                android:text="0.0 A"
                                android:textColor="@android:color/white"
                                android:textStyle="bold"
                                android:background="#AA000000"
                                android:gravity="center"
                                android:textSize="10sp"
                                android:layout_marginBottom="1dp"/>

                            <TextView android:id="@+id/tvW2"
                                android:layout_width="match_parent"
                                android:layout_height="0dp"
                                android:layout_weight="1"
                                android:text="0.0 W"
                                android:textColor="@android:color/white"
                                android:textStyle="bold"
                                android:background="#AA000000"
                                android:gravity="center"
                                android:textSize="10sp"
                                android:layout_marginBottom="1dp"/>

                            <TextView android:id="@+id/tvHz2"
                                android:layout_width="match_parent"
                                android:layout_height="0dp"
                                android:layout_weight="1"
                                android:text="0.0 Hz"
                                android:textColor="@android:color/white"
                                android:textStyle="bold"
                                android:background="#AA000000"
                                android:gravity="center"
                                android:textSize="10sp"
                                android:layout_marginBottom="1dp"/>

                            <TextView android:id="@+id/tvpF2"
                                android:layout_width="match_parent"
                                android:layout_height="0dp"
                                android:layout_weight="1"
                                android:text="0°"
                                android:textColor="@android:color/white"
                                android:textStyle="bold"
                                android:background="#AA000000"
                                android:gravity="center"
                                android:textSize="10sp"/>
                        </LinearLayout>

                        <LinearLayout
                            android:layout_width="0dp"
                            android:layout_height="match_parent"
                            android:layout_weight="1"
                            android:orientation="vertical"
                            android:background="#007BFF"
                            android:padding="6dp"
                            android:layout_marginStart="2dp">

                            <TextView android:id="@+id/tvCH3"
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:text="③ CH"
                                android:textColor="@android:color/white"
                                android:textStyle="bold"
                                android:textSize="10sp"
                                android:gravity="center"
                                android:layout_marginBottom="2dp"/>

                            <TextView android:id="@+id/tvV3"
                                android:layout_width="match_parent"
                                android:layout_height="0dp"
                                android:layout_weight="1"
                                android:text="0.0 V"
                                android:textColor="@android:color/white"
                                android:textStyle="bold"
                                android:background="#AA000000"
                                android:gravity="center"
                                android:textSize="10sp"
                                android:layout_marginBottom="1dp"/>

                            <TextView android:id="@+id/tvA3"
                                android:layout_width="match_parent"
                                android:layout_height="0dp"
                                android:layout_weight="1"
                                android:text="0.0 A"
                                android:textColor="@android:color/white"
                                android:textStyle="bold"
                                android:background="#AA000000"
                                android:gravity="center"
                                android:textSize="10sp"
                                android:layout_marginBottom="1dp"/>

                            <TextView android:id="@+id/tvW3"
                                android:layout_width="match_parent"
                                android:layout_height="0dp"
                                android:layout_weight="1"
                                android:text="0.0 W"
                                android:textColor="@android:color/white"
                                android:textStyle="bold"
                                android:background="#AA000000"
                                android:gravity="center"
                                android:textSize="10sp"
                                android:layout_marginBottom="1dp"/>

                            <TextView android:id="@+id/tvHz3"
                                android:layout_width="match_parent"
                                android:layout_height="0dp"
                                android:layout_weight="1"
                                android:text="0.0 Hz"
                                android:textColor="@android:color/white"
                                android:textStyle="bold"
                                android:background="#AA000000"
                                android:gravity="center"
                                android:textSize="10sp"
                                android:layout_marginBottom="1dp"/>

                            <TextView android:id="@+id/tvpF3"
                                android:layout_width="match_parent"
                                android:layout_height="0dp"
                                android:layout_weight="1"
                                android:text="0°"
                                android:textColor="@android:color/white"
                                android:textStyle="bold"
                                android:background="#AA000000"
                                android:gravity="center"
                                android:textSize="10sp"/>
                        </LinearLayout>
                    </LinearLayout>
                </LinearLayout>
            </androidx.cardview.widget.CardView>
        </LinearLayout>

        <LinearLayout
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:orientation="vertical"
            android:layout_marginStart="4dp">

            <androidx.cardview.widget.CardView
                android:layout_width="match_parent"
                android:layout_height="0dp"
                android:layout_weight="1"
                app:cardCornerRadius="8dp"
                app:cardElevation="2dp"
                android:layout_marginBottom="4dp">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:orientation="vertical">

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="U"
                        android:textStyle="bold"
                        android:textSize="16sp"
                        android:textColor="#333"
                        android:layout_gravity="center_horizontal"
                        android:layout_margin="8dp"/>

                    <de.kai_morich.simple_bluetooth_terminal.FasorView
                        android:id="@+id/fasorVoltaje"
                        android:layout_width="match_parent"
                        android:layout_height="0dp"
                        android:layout_weight="1"
                        android:layout_margin="8dp"/>
                </LinearLayout>
            </androidx.cardview.widget.CardView>

            <androidx.cardview.widget.CardView
                android:layout_width="match_parent"
                android:layout_height="0dp"
                android:layout_weight="1"
                app:cardCornerRadius="8dp"
                app:cardElevation="2dp"
                android:layout_marginTop="4dp">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:orientation="vertical">

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="I"
                        android:textStyle="bold"
                        android:textSize="16sp"
                        android:textColor="#333"
                        android:layout_gravity="center_horizontal"
                        android:layout_margin="8dp"/>

                    <de.kai_morich.simple_bluetooth_terminal.FasorView
                        android:id="@+id/fasorCorriente"
                        android:layout_width="match_parent"
                        android:layout_height="0dp"
                        android:layout_weight="1"
                        android:layout_margin="8dp"/>
                </LinearLayout>
            </androidx.cardview.widget.CardView>
        </LinearLayout>
    </LinearLayout>

    <LinearLayout
        android:id="@+id/buttonContainer"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:layout_marginTop="8dp"
        app:layout_constraintBottom_toBottomOf="parent">

        <LinearLayout
            android:id="@+id/btnBackToMenu"
            android:layout_width="wrap_content"
            android:layout_height="50dp"
            android:orientation="horizontal"
            android:background="@drawable/back_button_background"
            android:gravity="center"
            android:paddingHorizontal="16dp"
            android:layout_marginEnd="8dp"
            android:clickable="true"
            android:focusable="true">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="←"
                android:textSize="18sp"
                android:textColor="#666"
                android:textStyle="bold"
                android:layout_marginEnd="6dp"/>

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Menú"
                android:textSize="14sp"
                android:textColor="#666"
                android:textStyle="bold"/>
        </LinearLayout>

        <View
            android:layout_width="0dp"
            android:layout_height="1dp"
            android:layout_weight="1"/>

        <FrameLayout
            android:layout_width="50dp"
            android:layout_height="50dp"
            android:layout_marginEnd="12dp"
            android:layout_gravity="center">

            <ImageButton
                android:id="@+id/btnRec"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:background="@drawable/button_rec"
                android:src="@drawable/ic_rec"
                android:contentDescription="Record"
                android:scaleType="center"/>
        </FrameLayout>

        <ImageButton
            android:id="@+id/btnPlay"
            android:layout_width="50dp"
            android:layout_height="50dp"
            android:background="@drawable/button_play"
            android:src="@drawable/ic_play"
            android:contentDescription="Play"
            android:layout_gravity="center"/>

        <View
            android:layout_width="0dp"
            android:layout_height="1dp"
            android:layout_weight="1"/>
    </LinearLayout>

</androidx.constraintlayout.widget.ConstraintLayout>