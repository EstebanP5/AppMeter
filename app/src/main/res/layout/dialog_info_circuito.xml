<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical"
    android:padding="20dp"
    android:background="@android:color/white">

    <!-- Título del diálogo -->
    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Información del Circuito"
        android:textSize="20sp"
        android:textColor="#2C3E50"
        android:textStyle="bold"
        android:gravity="center"
        android:layout_marginBottom="20dp" />

    <!-- Información del circuito -->
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:background="@drawable/selector_background"
        android:padding="16dp"
        android:layout_marginBottom="20dp">

        <!-- ID del Circuito -->
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:layout_marginBottom="12dp">

            <TextView
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:text="ID Circuito:"
                android:textSize="14sp"
                android:textColor="#7F8C8D"
                android:textStyle="bold" />

            <TextView
                android:id="@+id/tvInfoCircuitoId"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="2"
                android:text="1"
                android:textSize="14sp"
                android:textColor="#2C3E50" />
        </LinearLayout>

        <!-- Nombre -->
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:layout_marginBottom="12dp">

            <TextView
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:text="Nombre:"
                android:textSize="14sp"
                android:textColor="#7F8C8D"
                android:textStyle="bold" />

            <TextView
                android:id="@+id/tvInfoCircuitoNombre"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="2"
                android:text="Circuito Principal"
                android:textSize="14sp"
                android:textColor="#2C3E50" />
        </LinearLayout>

        <!-- Localidad -->
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:layout_marginBottom="12dp">

            <TextView
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:text="Localidad:"
                android:textSize="14sp"
                android:textColor="#7F8C8D"
                android:textStyle="bold" />

            <TextView
                android:id="@+id/tvInfoCircuitoLocalidad"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="2"
                android:text="Sede Principal"
                android:textSize="14sp"
                android:textColor="#2C3E50" />
        </LinearLayout>

        <!-- Descripción -->
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:layout_marginBottom="12dp">

            <TextView
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:text="Descripción:"
                android:textSize="14sp"
                android:textColor="#7F8C8D"
                android:textStyle="bold" />

            <TextView
                android:id="@+id/tvInfoCircuitoDescripcion"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="2"
                android:text="Alimentación general"
                android:textSize="14sp"
                android:textColor="#2C3E50"
                android:maxLines="3"
                android:ellipsize="end" />
        </LinearLayout>

        <!-- Tarifa -->
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:layout_marginBottom="12dp">

            <TextView
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:text="Tarifa:"
                android:textSize="14sp"
                android:textColor="#7F8C8D"
                android:textStyle="bold" />

            <TextView
                android:id="@+id/tvInfoCircuitoTarifa"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="2"
                android:text="Tarifa1"
                android:textSize="14sp"
                android:textColor="#2C3E50" />
        </LinearLayout>

        <!-- RPU -->
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:layout_marginBottom="12dp">

            <TextView
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:text="RPU:"
                android:textSize="14sp"
                android:textColor="#7F8C8D"
                android:textStyle="bold" />

            <TextView
                android:id="@+id/tvInfoCircuitoRPU"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="2"
                android:text="123456789"
                android:textSize="14sp"
                android:textColor="#2C3E50" />
        </LinearLayout>

        <!-- Precio kWh -->
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal">

            <TextView
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:text="Precio kWh:"
                android:textSize="14sp"
                android:textColor="#7F8C8D"
                android:textStyle="bold" />

            <TextView
                android:id="@+id/tvInfoCircuitoPrecioKwh"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="2"
                android:text="$2.50"
                android:textSize="14sp"
                android:textColor="#27AE60"
                android:textStyle="bold" />
        </LinearLayout>
    </LinearLayout>

    <!-- Botones de acción -->
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:gravity="center">

        <Button
            android:id="@+id/btnEditarCircuitoInfo"
            android:layout_width="0dp"
            android:layout_height="48dp"
            android:layout_weight="1"
            android:layout_marginEnd="8dp"
            android:text="✏ Editar"
            android:textColor="@android:color/white"
            android:textSize="14sp"
            android:textStyle="bold"
            android:background="@drawable/btn_red_rounded" />

        <Button
            android:id="@+id/btnEliminarCircuitoInfo"
            android:layout_width="0dp"
            android:layout_height="48dp"
            android:layout_weight="1"
            android:layout_marginHorizontal="4dp"
            android:text="🗑 Eliminar"
            android:textColor="@android:color/white"
            android:textSize="14sp"
            android:textStyle="bold"
            android:background="@drawable/btn_delete_background" />

        <Button
            android:id="@+id/btnCerrarInfoCircuito"
            android:layout_width="0dp"
            android:layout_height="48dp"
            android:layout_weight="1"
            android:layout_marginStart="8dp"
            android:text="Cerrar"
            android:textColor="#2C3E50"
            android:textSize="14sp"
            android:textStyle="bold"
            android:background="@drawable/selector_background" />
    </LinearLayout>

</LinearLayout>