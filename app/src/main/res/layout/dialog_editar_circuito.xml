<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@drawable/dialog_background">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:padding="24dp">

        <!-- Título del dialog -->
        <TextView
            android:id="@+id/tvTituloCircuito"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Editar Circuito"
            android:textSize="22sp"
            android:textColor="#2C3E50"
            android:textStyle="bold"
            android:gravity="center"
            android:layout_marginBottom="24dp" />

        <!-- Información del circuito (solo lectura) -->
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:background="@drawable/selector_background"
            android:padding="16dp"
            android:layout_marginBottom="16dp">

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="ID del Circuito:"
                android:textSize="12sp"
                android:textColor="#7F8C8D"
                android:textStyle="bold" />

            <TextView
                android:id="@+id/tvIdCircuito"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="1"
                android:textSize="16sp"
                android:textColor="#2C3E50"
                android:layout_marginBottom="8dp" />
        </LinearLayout>

        <!-- Selector de Localidad -->
        <com.google.android.material.textfield.TextInputLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="16dp"
            android:hint="Localidad"
            style="@style/Widget.MaterialComponents.TextInputLayout.OutlinedBox.ExposedDropdownMenu">

            <AutoCompleteTextView
                android:id="@+id/spEditarCircuitoLocalidad"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:inputType="none"
                android:textSize="16sp"
                android:textColor="#2C3E50" />
        </com.google.android.material.textfield.TextInputLayout>

        <!-- Campo Nombre -->
        <com.google.android.material.textfield.TextInputLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="16dp"
            android:hint="Nombre del circuito"
            style="@style/Widget.MaterialComponents.TextInputLayout.OutlinedBox">

            <com.google.android.material.textfield.TextInputEditText
                android:id="@+id/etEditarCircuitoNombre"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:inputType="text"
                android:textSize="16sp"
                android:textColor="#2C3E50" />
        </com.google.android.material.textfield.TextInputLayout>

        <!-- Campo Descripción -->
        <com.google.android.material.textfield.TextInputLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="16dp"
            android:hint="Descripción"
            style="@style/Widget.MaterialComponents.TextInputLayout.OutlinedBox">

            <com.google.android.material.textfield.TextInputEditText
                android:id="@+id/etEditarCircuitoDescripcion"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:inputType="textMultiLine"
                android:maxLines="3"
                android:textSize="16sp"
                android:textColor="#2C3E50" />
        </com.google.android.material.textfield.TextInputLayout>

        <!-- Campo Tarifa -->
        <com.google.android.material.textfield.TextInputLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="16dp"
            android:hint="Tarifa"
            style="@style/Widget.MaterialComponents.TextInputLayout.OutlinedBox">

            <com.google.android.material.textfield.TextInputEditText
                android:id="@+id/etEditarCircuitoTarifa"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:inputType="text"
                android:textSize="16sp"
                android:textColor="#2C3E50" />
        </com.google.android.material.textfield.TextInputLayout>

        <!-- Campo RPU -->
        <com.google.android.material.textfield.TextInputLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="16dp"
            android:hint="RPU"
            style="@style/Widget.MaterialComponents.TextInputLayout.OutlinedBox">

            <com.google.android.material.textfield.TextInputEditText
                android:id="@+id/etEditarCircuitoRPU"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:inputType="text"
                android:textSize="16sp"
                android:textColor="#2C3E50" />
        </com.google.android.material.textfield.TextInputLayout>

        <!-- Campo Precio kWh -->
        <com.google.android.material.textfield.TextInputLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="24dp"
            android:hint="Precio kWh"
            style="@style/Widget.MaterialComponents.TextInputLayout.OutlinedBox">

            <com.google.android.material.textfield.TextInputEditText
                android:id="@+id/etEditarCircuitoPrecioKwh"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:inputType="numberDecimal"
                android:textSize="16sp"
                android:textColor="#2C3E50" />
        </com.google.android.material.textfield.TextInputLayout>

        <!-- Botones -->
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:gravity="end">

            <Button
                android:id="@+id/btnCancelarEditarCircuito"
                android:layout_width="wrap_content"
                android:layout_height="48dp"
                android:text="Cancelar"
                android:textColor="#7F8C8D"
                android:textSize="14sp"
                android:background="@drawable/btn_cancel_background"
                android:layout_marginEnd="12dp"
                android:paddingHorizontal="24dp"
                style="?attr/borderlessButtonStyle" />

            <Button
                android:id="@+id/btnActualizarCircuito"
                android:layout_width="wrap_content"
                android:layout_height="48dp"
                android:text="Actualizar Circuito"
                android:textColor="@android:color/white"
                android:textSize="14sp"
                android:textStyle="bold"
                android:background="@drawable/btn_save_background"
                android:paddingHorizontal="24dp"
                android:elevation="2dp" />
        </LinearLayout>

        <!-- Opción de eliminar -->
        <Button
            android:id="@+id/btnEliminarCircuito"
            android:layout_width="match_parent"
            android:layout_height="48dp"
            android:text="🗑 Eliminar Circuito"
            android:textColor="@android:color/white"
            android:textSize="14sp"
            android:textStyle="bold"
            android:background="@drawable/btn_delete_background"
            android:layout_marginTop="16dp"
            android:elevation="2dp" />

    </LinearLayout>
</ScrollView>