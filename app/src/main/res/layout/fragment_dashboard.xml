<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/background_color"
    android:padding="16dp">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">

        <!-- Header con hora y selector de cliente -->
        <androidx.cardview.widget.CardView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="16dp"
            app:cardCornerRadius="12dp"
            app:cardElevation="6dp">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:padding="16dp"
                android:background="@drawable/gradient_header">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"
                    android:gravity="center_vertical"
                    android:layout_marginBottom="12dp">

                    <TextView
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:text="⚡ Home"
                        android:textSize="24sp"
                        android:textStyle="bold"
                        android:textColor="#FFFFFF" />

                    <TextView
                        android:id="@+id/tvHoraDashboard"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="--:--"
                        android:textSize="20sp"
                        android:textStyle="bold"
                        android:textColor="#FFD700"
                        tools:text="14:30" />
                </LinearLayout>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"
                    android:gravity="center_vertical">

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="🏭 Cliente:"
                        android:textSize="14sp"
                        android:textColor="#E0E0E0"
                        android:layout_marginEnd="12dp" />

                    <Spinner
                        android:id="@+id/spinnerCustomers"
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:minHeight="40dp"
                        android:background="@drawable/spinner_white_background"
                        android:padding="8dp" />
                </LinearLayout>
            </LinearLayout>
        </androidx.cardview.widget.CardView>

        <!-- Diagrama central del sistema energético -->
        <androidx.cardview.widget.CardView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="16dp"
            app:cardCornerRadius="12dp"
            app:cardElevation="4dp">

            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="350dp"
                android:padding="24dp"
                android:background="#F8F9FA">

                <!-- Componente Solar (superior izquierda) -->
                <androidx.cardview.widget.CardView
                    android:id="@+id/cardSolar"
                    android:layout_width="100dp"
                    android:layout_height="80dp"
                    android:layout_alignParentTop="true"
                    android:layout_alignParentStart="true"
                    app:cardCornerRadius="8dp"
                    app:cardElevation="4dp"
                    android:clickable="true"
                    android:focusable="true"
                    android:foreground="?android:attr/selectableItemBackground">

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:orientation="vertical"
                        android:gravity="center"
                        android:padding="8dp">

                        <ImageView
                            android:id="@+id/ivSolar"
                            android:layout_width="24dp"
                            android:layout_height="24dp"
                            android:src="@drawable/ic_solar"
                            app:tint="#FF9800"
                            android:layout_marginBottom="4dp" />

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="Solar"
                            android:textSize="12sp"
                            android:textStyle="bold"
                            android:textColor="#333" />

                        <TextView
                            android:id="@+id/tvSolarValue"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="0 kW"
                            android:textSize="10sp"
                            android:textColor="#666"
                            tools:text="2.5 kW" />
                    </LinearLayout>
                </androidx.cardview.widget.CardView>

                <!-- Componente CFE (superior derecha) -->
                <androidx.cardview.widget.CardView
                    android:id="@+id/cardCFE"
                    android:layout_width="100dp"
                    android:layout_height="80dp"
                    android:layout_alignParentTop="true"
                    android:layout_alignParentEnd="true"
                    app:cardCornerRadius="8dp"
                    app:cardElevation="4dp"
                    android:clickable="true"
                    android:focusable="true"
                    android:foreground="?android:attr/selectableItemBackground">

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:orientation="vertical"
                        android:gravity="center"
                        android:padding="8dp">

                        <ImageView
                            android:id="@+id/ivCFE"
                            android:layout_width="24dp"
                            android:layout_height="24dp"
                            android:src="@drawable/ic_power_grid"
                            app:tint="#2196F3"
                            android:layout_marginBottom="4dp" />

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="CFE"
                            android:textSize="12sp"
                            android:textStyle="bold"
                            android:textColor="#333" />

                        <TextView
                            android:id="@+id/tvCFEValue"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="0 kW"
                            android:textSize="10sp"
                            android:textColor="#666"
                            tools:text="1.8 kW" />
                    </LinearLayout>
                </androidx.cardview.widget.CardView>

                <!-- Fábrica Central -->
                <androidx.cardview.widget.CardView
                    android:id="@+id/cardFactory"
                    android:layout_width="120dp"
                    android:layout_height="100dp"
                    android:layout_centerInParent="true"
                    app:cardCornerRadius="12dp"
                    app:cardElevation="6dp"
                    app:cardBackgroundColor="#E3F2FD"
                    android:clickable="true"
                    android:focusable="true"
                    android:foreground="?android:attr/selectableItemBackground">

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:orientation="vertical"
                        android:gravity="center"
                        android:padding="12dp">

                        <ImageView
                            android:id="@+id/ivFactory"
                            android:layout_width="40dp"
                            android:layout_height="40dp"
                            android:src="@drawable/ic_factory"
                            app:tint="#1976D2"
                            android:layout_marginBottom="4dp" />

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="FÁBRICA"
                            android:textSize="12sp"
                            android:textStyle="bold"
                            android:textColor="#1976D2"
                            android:gravity="center" />

                        <TextView
                            android:id="@+id/tvFactoryValue"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="0 kW"
                            android:textSize="10sp"
                            android:textColor="#666"
                            tools:text="4.8 kW" />
                    </LinearLayout>
                </androidx.cardview.widget.CardView>

                <!-- Componente Diesel (inferior izquierda) -->
                <androidx.cardview.widget.CardView
                    android:id="@+id/cardDiesel"
                    android:layout_width="100dp"
                    android:layout_height="80dp"
                    android:layout_alignParentBottom="true"
                    android:layout_alignParentStart="true"
                    app:cardCornerRadius="8dp"
                    app:cardElevation="4dp"
                    android:clickable="true"
                    android:focusable="true"
                    android:foreground="?android:attr/selectableItemBackground">

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:orientation="vertical"
                        android:gravity="center"
                        android:padding="8dp">

                        <ImageView
                            android:id="@+id/ivDiesel"
                            android:layout_width="24dp"
                            android:layout_height="24dp"
                            android:src="@drawable/ic_diesel"
                            app:tint="#FF5722"
                            android:layout_marginBottom="4dp" />

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="Diesel"
                            android:textSize="12sp"
                            android:textStyle="bold"
                            android:textColor="#333" />

                        <TextView
                            android:id="@+id/tvDieselValue"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="0 kW"
                            android:textSize="10sp"
                            android:textColor="#666"
                            tools:text="0.5 kW" />
                    </LinearLayout>
                </androidx.cardview.widget.CardView>

                <!-- Componente Batería (inferior derecha) -->
                <androidx.cardview.widget.CardView
                    android:id="@+id/cardBattery"
                    android:layout_width="100dp"
                    android:layout_height="80dp"
                    android:layout_alignParentBottom="true"
                    android:layout_alignParentEnd="true"
                    app:cardCornerRadius="8dp"
                    app:cardElevation="4dp"
                    android:clickable="true"
                    android:focusable="true"
                    android:foreground="?android:attr/selectableItemBackground">

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:orientation="vertical"
                        android:gravity="center"
                        android:padding="8dp">

                        <ImageView
                            android:id="@+id/ivBattery"
                            android:layout_width="24dp"
                            android:layout_height="24dp"
                            android:src="@drawable/ic_battery"
                            app:tint="#4CAF50"
                            android:layout_marginBottom="4dp" />

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="Batería"
                            android:textSize="12sp"
                            android:textStyle="bold"
                            android:textColor="#333" />

                        <TextView
                            android:id="@+id/tvBatteryValue"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="0%"
                            android:textSize="10sp"
                            android:textColor="#666"
                            tools:text="85%" />
                    </LinearLayout>
                </androidx.cardview.widget.CardView>

                <!-- Flechas de flujo de energía -->

                <!-- Flecha Solar -> Fábrica -->
                <ImageView
                    android:id="@+id/arrowSolarToFactory"
                    android:layout_width="30dp"
                    android:layout_height="30dp"
                    android:layout_above="@id/cardFactory"
                    android:layout_toEndOf="@id/cardSolar"
                    android:layout_marginStart="10dp"
                    android:layout_marginBottom="20dp"
                    android:src="@drawable/ic_arrow_right"
                    app:tint="#FF9800"
                    android:rotation="45"
                    android:visibility="invisible" />

                <!-- Flecha CFE -> Fábrica -->
                <ImageView
                    android:id="@+id/arrowCFEToFactory"
                    android:layout_width="30dp"
                    android:layout_height="30dp"
                    android:layout_above="@id/cardFactory"
                    android:layout_toStartOf="@id/cardCFE"
                    android:layout_marginEnd="10dp"
                    android:layout_marginBottom="20dp"
                    android:src="@drawable/ic_arrow_left"
                    app:tint="#2196F3"
                    android:rotation="-45"
                    android:visibility="invisible" />

                <!-- Flecha Fábrica -> CFE (inyección) -->
                <ImageView
                    android:id="@+id/arrowFactoryToCFE"
                    android:layout_width="30dp"
                    android:layout_height="30dp"
                    android:layout_above="@id/cardCFE"
                    android:layout_toStartOf="@id/cardCFE"
                    android:layout_marginEnd="10dp"
                    android:layout_marginBottom="10dp"
                    android:src="@drawable/ic_arrow_up"
                    app:tint="#4CAF50"
                    android:rotation="45"
                    android:visibility="invisible" />

                <!-- Flecha Diesel -> Fábrica -->
                <ImageView
                    android:id="@+id/arrowDieselToFactory"
                    android:layout_width="30dp"
                    android:layout_height="30dp"
                    android:layout_below="@id/cardFactory"
                    android:layout_toEndOf="@id/cardDiesel"
                    android:layout_marginStart="10dp"
                    android:layout_marginTop="20dp"
                    android:src="@drawable/ic_arrow_right"
                    app:tint="#FF5722"
                    android:rotation="-45"
                    android:visibility="invisible" />

                <!-- Flecha Batería -> Fábrica -->
                <ImageView
                    android:id="@+id/arrowBatteryToFactory"
                    android:layout_width="30dp"
                    android:layout_height="30dp"
                    android:layout_below="@id/cardFactory"
                    android:layout_toStartOf="@id/cardBattery"
                    android:layout_marginEnd="10dp"
                    android:layout_marginTop="20dp"
                    android:src="@drawable/ic_arrow_left"
                    app:tint="#4CAF50"
                    android:rotation="45"
                    android:visibility="invisible" />

            </RelativeLayout>
        </androidx.cardview.widget.CardView>

        <!-- Panel de detalles Solar -->
        <LinearLayout
            android:id="@+id/panelSolarDetails"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:background="@drawable/panel_background"
            android:padding="16dp"
            android:layout_marginBottom="8dp"
            android:visibility="gone">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="☀️ Detalles del Sistema Solar"
                android:textSize="18sp"
                android:textStyle="bold"
                android:textColor="#FF9800"
                android:layout_marginBottom="12dp" />

            <TextView
                android:id="@+id/tvSolarGeneration"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Generación: 0 kW"
                android:textSize="14sp"
                android:textColor="#333"
                android:layout_marginBottom="4dp" />

            <TextView
                android:id="@+id/tvSolarEfficiency"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Eficiencia: 0%"
                android:textSize="14sp"
                android:textColor="#333"
                android:layout_marginBottom="4dp" />

            <TextView
                android:id="@+id/tvSolarSavings"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Ahorro mensual: $0.00"
                android:textSize="14sp"
                android:textColor="#4CAF50"
                android:textStyle="bold" />
        </LinearLayout>

        <!-- Panel de detalles CFE -->
        <LinearLayout
            android:id="@+id/panelCFEDetails"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:background="@drawable/panel_background"
            android:padding="16dp"
            android:layout_marginBottom="8dp"
            android:visibility="gone">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="⚡ Detalles de Red CFE"
                android:textSize="18sp"
                android:textStyle="bold"
                android:textColor="#2196F3"
                android:layout_marginBottom="12dp" />

            <TextView
                android:id="@+id/tvCFEConsumption"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Consumo: 0 kW"
                android:textSize="14sp"
                android:textColor="#333"
                android:layout_marginBottom="4dp" />

            <TextView
                android:id="@+id/tvCFEInjection"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Inyección: 0 kW"
                android:textSize="14sp"
                android:textColor="#333"
                android:layout_marginBottom="4dp" />

            <TextView
                android:id="@+id/tvCFETariff"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Tarifa: $0.00/kWh"
                android:textSize="14sp"
                android:textColor="#666" />
        </LinearLayout>

        <!-- Panel de detalles Diesel -->
        <LinearLayout
            android:id="@+id/panelDieselDetails"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:background="@drawable/panel_background"
            android:padding="16dp"
            android:layout_marginBottom="8dp"
            android:visibility="gone">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="🛢️ Detalles del Generador Diesel"
                android:textSize="18sp"
                android:textStyle="bold"
                android:textColor="#FF5722"
                android:layout_marginBottom="12dp" />

            <TextView
                android:id="@+id/tvDieselConsumption"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Generación: 0 kW"
                android:textSize="14sp"
                android:textColor="#333"
                android:layout_marginBottom="4dp" />

            <TextView
                android:id="@+id/tvDieselHours"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Horas: 0.0"
                android:textSize="14sp"
                android:textColor="#333"
                android:layout_marginBottom="4dp" />

            <TextView
                android:id="@+id/tvDieselFuel"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Combustible: 0%"
                android:textSize="14sp"
                android:textColor="#666" />
        </LinearLayout>

        <!-- Panel de detalles Batería -->
        <LinearLayout
            android:id="@+id/panelBatteryDetails"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:background="@drawable/panel_background"
            android:padding="16dp"
            android:layout_marginBottom="8dp"
            android:visibility="gone">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="🔋 Detalles del Sistema de Baterías"
                android:textSize="18sp"
                android:textStyle="bold"
                android:textColor="#4CAF50"
                android:layout_marginBottom="12dp" />

            <TextView
                android:id="@+id/tvBatteryLevel"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Nivel: 0%"
                android:textSize="14sp"
                android:textColor="#333"
                android:layout_marginBottom="4dp" />

            <TextView
                android:id="@+id/tvBatteryCapacity"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Capacidad: 0 kWh"
                android:textSize="14sp"
                android:textColor="#333"
                android:layout_marginBottom="4dp" />

            <TextView
                android:id="@+id/tvBatteryStatus"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Estado: --"
                android:textSize="14sp"
                android:textColor="#666" />
        </LinearLayout>

        <!-- Panel de detalles Fábrica -->
        <LinearLayout
            android:id="@+id/panelFactoryDetails"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:background="@drawable/panel_background"
            android:padding="16dp"
            android:layout_marginBottom="8dp"
            android:visibility="gone">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="🏭 Detalles de la Fábrica"
                android:textSize="18sp"
                android:textStyle="bold"
                android:textColor="#1976D2"
                android:layout_marginBottom="12dp" />

            <TextView
                android:id="@+id/tvFactoryConsumption"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Consumo: 0 kW"
                android:textSize="14sp"
                android:textColor="#333"
                android:layout_marginBottom="4dp" />

            <TextView
                android:id="@+id/tvFactoryEfficiency"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Eficiencia: 0%"
                android:textSize="14sp"
                android:textColor="#333"
                android:layout_marginBottom="4dp" />

            <TextView
                android:id="@+id/tvFactoryDevices"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Dispositivos: 0 activos"
                android:textSize="14sp"
                android:textColor="#666" />
        </LinearLayout>

        <!-- Resumen de estado general -->
        <androidx.cardview.widget.CardView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="8dp"
            app:cardCornerRadius="12dp"
            app:cardElevation="4dp">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:padding="16dp"
                android:background="@drawable/gradient_summary">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="📊 Resumen del Sistema"
                    android:textSize="18sp"
                    android:textStyle="bold"
                    android:textColor="#FFFFFF"
                    android:layout_marginBottom="8dp" />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Sistema operando en modo automático"
                    android:textSize="14sp"
                    android:textColor="#E0E0E0"
                    android:layout_marginBottom="4dp" />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Última actualización: Tiempo real"
                    android:textSize="12sp"
                    android:textColor="#BDBDBD" />
            </LinearLayout>
        </androidx.cardview.widget.CardView>

    </LinearLayout>
</ScrollView>