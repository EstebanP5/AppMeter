<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:padding="16dp">

    <!-- Título -->
    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Selecciona un cliente para modificar"
        android:textSize="18sp"
        android:textColor="#2C3E50"
        android:textStyle="bold"
        android:layout_marginBottom="16dp" />

    <!-- Cliente Selector -->
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:background="@drawable/selector_background"
        android:padding="16dp"
        android:layout_marginBottom="24dp"
        android:elevation="2dp">

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Cliente:"
            android:textSize="14sp"
            android:textColor="#7F8C8D"
            android:layout_marginBottom="8dp" />

        <Spinner
            android:id="@+id/spClientes"
            android:layout_width="match_parent"
            android:layout_height="48dp"
            android:background="@drawable/spinner_background"
            android:padding="12dp" />
    </LinearLayout>

    <!-- Título Modificar -->
    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Modificar el cliente seleccionado"
        android:textSize="18sp"
        android:textColor="#2C3E50"
        android:textStyle="bold"
        android:layout_marginBottom="16dp" />

    <!-- Botones de acción -->
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:layout_marginBottom="16dp">

        <Button
            android:id="@+id/btnEditarCliente"
            android:layout_width="0dp"
            android:layout_height="48dp"
            android:layout_weight="1"
            android:layout_marginEnd="8dp"
            android:text="✏ Cliente"
            android:textColor="@android:color/white"
            android:textSize="14sp"
            android:textStyle="bold"
            android:background="@drawable/btn_red_rounded"
            android:elevation="3dp" />

        <Button
            android:id="@+id/btnEditarCircuito"
            android:layout_width="0dp"
            android:layout_height="48dp"
            android:layout_weight="1"
            android:layout_marginStart="8dp"
            android:text="✏ Circuito"
            android:textColor="@android:color/white"
            android:textSize="14sp"
            android:textStyle="bold"
            android:background="@drawable/btn_red_rounded"
            android:elevation="3dp" />
    </LinearLayout>

    <Button
        android:id="@+id/btnEditarDispositivo"
        android:layout_width="match_parent"
        android:layout_height="48dp"
        android:text="✏ Dispositivo"
        android:textColor="@android:color/white"
        android:textSize="14sp"
        android:textStyle="bold"
        android:background="@drawable/btn_red_rounded"
        android:layout_marginBottom="16dp"
        android:elevation="3dp" />

    <!-- Botón Eliminar Cliente -->
    <Button
        android:id="@+id/btnEliminarCliente"
        android:layout_width="match_parent"
        android:layout_height="48dp"
        android:text="🗑 Eliminar Cliente"
        android:textColor="@android:color/white"
        android:textSize="14sp"
        android:textStyle="bold"
        android:background="@drawable/btn_red_rounded"
        android:layout_marginBottom="24dp"
        android:elevation="3dp" />

    <!-- Modal info -->
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:background="@drawable/modal_background"
        android:padding="20dp"
        android:layout_marginTop="16dp"
        android:elevation="1dp"
        tools:ignore="ExtraText">

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Modal"
            android:textSize="16sp"
            android:textColor="#2C3E50"
            android:textStyle="bold"
            android:layout_marginBottom="12dp" />

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Usa estas herramientas para cambiar, agregar, borrar o simplemente visualizar información del cliente."
            android:textSize="14sp"
            android:textColor="#7F8C8D"
            android:lineSpacingExtra="4dp"
            android:layout_marginBottom="16dp" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:gravity="center"
            android:layout_marginBottom="16dp">

            <TextView
                android:layout_width="32dp"
                android:layout_height="32dp"
                android:text="✏"
                android:textSize="18sp"
                android:textColor="#E74C3C"
                android:gravity="center"
                android:layout_marginEnd="8dp" />

        </LinearLayout>

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="¡No olvides corroborar que corresponda tu cliente, localidad, circuito y/o dispositivo con lo que aparezca en los selectores!"
            android:textSize="12sp"
            android:textColor="#E67E22"
            android:textStyle="italic"
            android:lineSpacingExtra="2dp"
            android:gravity="center" />
    </LinearLayout>

</LinearLayout>