<?xml version="1.0" encoding="utf-8"?>
<resources>

    <!-- Estilo base para la aplicación - MaterialComponents para TextInputLayout -->
    <style name="AppTheme" parent="Theme.MaterialComponents.Light.DarkActionBar">
        <item name="colorPrimary">#2196F3</item>
        <item name="colorPrimaryDark">#1976D2</item>
        <item name="colorAccent">#FF9800</item>
        <item name="android:colorBackground">#FFFFFF</item>

        <!-- Mantener botones con estilo AppCompat por defecto -->
        <item name="materialButtonStyle">@style/Widget.AppCompat.Button</item>
    </style>

    <!-- Estilo sin ActionBar -->
    <style name="AppTheme.NoActionBar">
        <item name="windowActionBar">false</item>
        <item name="windowNoTitle">true</item>
    </style>

    <!-- Estilo para botones personalizados - MANTENER AppCompat -->
    <style name="CustomButton" parent="Widget.AppCompat.Button">
        <item name="android:background">@drawable/btn_blue_rounded</item>
        <item name="android:textColor">@android:color/white</item>
        <item name="android:textAllCaps">false</item>
    </style>

    <!-- Estilo para botones pequeños - MANTENER AppCompat -->
    <style name="SmallButton" parent="Widget.AppCompat.Button">
        <item name="android:background">@drawable/btn_orange_small</item>
        <item name="android:textColor">@android:color/white</item>
        <item name="android:textAllCaps">false</item>
    </style>

    <!-- Estilo para botón cancelar - FORZAR diseño personalizado -->
    <style name="CancelButton" parent="Widget.AppCompat.Button">
        <item name="android:background">@drawable/btn_white_background</item>
        <item name="android:textColor">#757575</item>
        <item name="android:textAllCaps">false</item>
        <item name="backgroundTint">@null</item>
        <item name="android:backgroundTint">@null</item>
    </style>

    <!-- Estilo para botón guardar - FORZAR diseño personalizado -->
    <style name="SaveButton" parent="Widget.AppCompat.Button">
        <item name="android:background">@drawable/btn_blue_background</item>
        <item name="android:textColor">@android:color/white</item>
        <item name="android:textAllCaps">false</item>
        <item name="backgroundTint">@null</item>
        <item name="android:backgroundTint">@null</item>
    </style>

    <!-- Estilo para botones de modo (Agregar/Modificar) - MANTENER AppCompat -->
    <style name="ModeButton" parent="Widget.AppCompat.Button">
        <item name="android:textColor">@android:color/white</item>
        <item name="android:textAllCaps">false</item>
    </style>

    <!-- Estilo para CardView -->
    <style name="CardStyle" parent="CardView">
        <item name="cardCornerRadius">12dp</item>
        <item name="cardElevation">6dp</item>
        <item name="android:layout_margin">12dp</item>
        <item name="cardBackgroundColor">@android:color/white</item>
        <item name="cardUseCompatPadding">true</item>
        <item name="cardPreventCornerOverlap">true</item>
        <item name="android:clickable">true</item>
        <item name="android:foreground">?android:attr/selectableItemBackground</item>
    </style>

</resources>